<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dialogItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMenuBg">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="36dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintGuide_percent="0.52307695" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friendImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/swipeLabel"
            android:layout_marginLeft="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ownerImage"
            android:src="@drawable/avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintLeft_toLeftOf="@+id/friendName"
            app:layout_constraintTop_toBottomOf="@+id/friendName"
            android:layout_marginTop="4dp"
            android:layout_height="25dp"
            android:layout_width="25dp" />

        <TextView
            android:text="Test User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendName"
            android:textSize="14dp"
            android:textColor="@color/colorMenuText"
            app:layout_constraintTop_toTopOf="@+id/friendImage"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/friendImage"
            android:layout_marginLeft="12dp" />

        <TextView
            android:text="Lorem ipsum lorem di ameti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendMess"
            android:textColor="@color/colorMenuText"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/friendName"
            app:layout_constraintBottom_toBottomOf="@+id/ownerImage"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ownerImage"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendDate"
            android:textColor="@color/colorMenuText"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/circle_active"
            android:id="@+id/friendStatus"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintVertical_bias="0.39"
            app:layout_constraintBottom_toBottomOf="@+id/friendMess"
            app:layout_constraintTop_toTopOf="@+id/friendMess" />

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/imageView4"
            android:background="@color/colorMenuBgDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="1dp" />

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/imageView3"
            android:background="@color/colorBorder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            android:layout_height="1dp" />

        <ImageView
            android:layout_height="0dp"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/swipeLabel"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="5dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>
