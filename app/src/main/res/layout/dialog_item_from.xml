<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMenuBg">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="34dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.52307695" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_user"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/swipeOptions"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="Test User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendName"
        android:textSize="14dp"
        android:textColor="@color/colorMenuText"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/friendImage"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="Lorem ipsum lorem di ameti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendMess"
        android:textColor="@color/colorMenuText"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/friendName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle_active"
        android:id="@+id/friendStatus"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.39" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageView4"
        android:background="@color/colorMenuBgDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageView3"
        android:background="@color/colorBorder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageView4"
        android:layout_height="1dp" />

    <ImageView
        android:layout_height="0dp"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/swipeOptions"
        app:layout_constraintBottom_toTopOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/friendImage"
        android:layout_width="5dp" />

</android.support.constraint.ConstraintLayout>